<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:elevation="7dp"
        android:id="@+id/frame_nots"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTintMode="add">
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:elevation="7dp"
            android:background="@drawable/bg_imagebtn"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/grey"
            android:text="@string/not" />
    </FrameLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/img_nots"
        android:layout_height="wrap_content"
        android:src="@drawable/notification_grey"
        app:layout_constraintTop_toBottomOf="@id/frame_nots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/img_nots"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/zazaza"
        android:text="@string/nots_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
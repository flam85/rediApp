<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:padding="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_imagebtn"
            android:elevation="7dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/send_pkg"
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="23dp"
                    android:src="@drawable/vector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/pkg_text1"
                    android:textColor="@color/zazaza"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin2">

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint1"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint2"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint3"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint4"
                    android:padding="5dp"
                    android:textColor="@color/zazaza"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lin3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="23dp"
                    android:src="@drawable/vector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/pkg_text1"
                    android:textColor="@color/zazaza"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lin4">

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint1"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint2"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editTextPhone1"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint3"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint4"
                    android:padding="5dp"
                    android:textColor="@color/zazaza"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lin5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="23dp"
                    android:src="@drawable/add_square" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/roboto"
                    android:text="@string/pkg_text1"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="23dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_medium"
                android:text="@string/pkg_text3"
                android:textColor="@color/zazaza"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lin6" />


            <LinearLayout
                android:id="@+id/lin7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6">

                <EditText
                    android:id="@+id/editText8"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint5"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editText9"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint6"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/editTextPhone3"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="23dp"
                    android:layout_marginTop="7dp"
                    android:background="@color/white"
                    android:elevation="5dp"
                    android:fontFamily="@font/roboto"
                    android:hint="@string/pkg_hint7"
                    android:inputType="phone"
                    android:padding="5dp"
                    android:textColor="@color/grey_light"
                    android:textColorHint="@color/grey_light"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>